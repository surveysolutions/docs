{{/* Generates a valid Algolia search index */}}
{{- $.Scratch.Add "index" slice -}}
{{- $section := $.Site.GetPage "section" .Section -}}
{{- range .Site.AllPages -}}
  {{- if or (and (.IsDescendant $section) (and (not .Draft) (not .Params.private))) $section.IsHome -}}
    {{- $pagesection := $.Site.GetPage "section" .Section -}}
    {{- if gt .PlainWords 0 -}}
      {{- $.Scratch.Delete "content" -}}
      {{- range first 1000 .PlainWords -}}
        {{- $.Scratch.Add "content" " " -}}
        {{- $.Scratch.Add "content" . -}}
      {{- end -}}
      {{- $.Scratch.Add "index" (dict "objectID" .File.UniqueID "lang" .Lang "lastmod" (.Lastmod.Format "January 2, 2006") "content" ($.Scratch.Get "content") "title" .Title "type" .Type "url" .RelPermalink "wordcount" .WordCount "section" $pagesection.Title "keywords" .Keywords)}}
    {{- end -}}
    {{- if gt .PlainWords 1000 -}}
      {{- $.Scratch.Delete "content" -}}
      {{- range first 1000 (after 1000 .PlainWords) -}}
        {{- $.Scratch.Add "content" " " -}}
        {{- $.Scratch.Add "content" . -}}
      {{- end -}}
      {{- $.Scratch.Add "index" (dict "objectID" .File.UniqueID "lang" .Lang "lastmod" (.Lastmod.Format "January 2, 2006") "content" ($.Scratch.Get "content") "title" .Title "type" .Type "url" .RelPermalink "wordcount" .WordCount "section" $pagesection.Title "keywords" .Keywords)}}
    {{- end -}}
    {{- if gt .PlainWords 2000 -}}
      {{- $.Scratch.Delete "content" -}}
      {{- range first 1000 (after 2000 .PlainWords) -}}
        {{- $.Scratch.Add "content" " " -}}
        {{- $.Scratch.Add "content" . -}}
      {{- end -}}
      {{- $.Scratch.Add "index" (dict "objectID" .File.UniqueID "lang" .Lang "lastmod" (.Lastmod.Format "January 2, 2006") "content" ($.Scratch.Get "content") "title" .Title "type" .Type "url" .RelPermalink "wordcount" .WordCount "section" $pagesection.Title "keywords" .Keywords)}}
    {{- end -}}
    {{- if gt .PlainWords 3000 -}}
      {{- $.Scratch.Delete "content" -}}
      {{- range first 1000 (after 3000 .PlainWords) -}}
        {{- $.Scratch.Add "content" " " -}}
        {{- $.Scratch.Add "content" . -}}
      {{- end -}}
      {{- $.Scratch.Add "index" (dict "objectID" .File.UniqueID "lang" .Lang "lastmod" (.Lastmod.Format "January 2, 2006") "content" ($.Scratch.Get "content") "title" .Title "type" .Type "url" .RelPermalink "wordcount" .WordCount "section" $pagesection.Title "keywords" .Keywords)}}
    {{- end -}}
    {{- if gt .PlainWords 4000 -}}
      {{- $.Scratch.Delete "content" -}}
      {{- range first 1000 (after 4000 .PlainWords) -}}
        {{- $.Scratch.Add "content" " " -}}
        {{- $.Scratch.Add "content" . -}}
      {{- end -}}
      {{- $.Scratch.Add "index" (dict "objectID" .File.UniqueID "lang" .Lang "lastmod" (.Lastmod.Format "January 2, 2006") "content" ($.Scratch.Get "content") "title" .Title "type" .Type "url" .RelPermalink "wordcount" .WordCount "section" $pagesection.Title "keywords" .Keywords)}}
    {{- end -}}
  {{- end -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
